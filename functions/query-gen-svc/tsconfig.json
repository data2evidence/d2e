{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": false,
        "sourceMap": true,
        "declaration": true,
        "outDir": "target",
        "rootDir": ".",
        "target": "ES2017",
        "esModuleInterop": true,
        "types": ["jasmine"],
        "resolveJsonModule": true,
        "noErrorTruncation": true
    },
    "include": ["src", "spec", "typings"],
    "exclude": ["envConverter"]
}
