FUNCTION "hc.hph.core.db.functions::QuotePath" ( content NVARCHAR(255) )
RETURNS string NVARCHAR(255) LANGUAGE SQLSCRIPT SQL SECURITY INVOKER AS
BEGIN
    DECLARE position INTEGER := LOCATE( :content, '\' );
    string := content;
    WHILE :position > 0 DO
        string := SUBSTRING( :string, 1, :position ) || SUBSTRING( :string, :position );
        position := LOCATE( :string, '\', :position + 2 );
    END WHILE;
END