PROCEDURE "hc.hph.di.procedures::checkRoleAssigned" ( 
	IN GRANTEE NVARCHAR(256),
	IN ROLE_NAME NVARCHAR(256),
	OUT COUNT_VALUE INTEGER
	) 
	LANGUAGE SQLSCRIPT
	SQL SECURITY INVOKER AS
BEGIN

    SELECT COUNT(*) INTO COUNT_VALUE
    FROM "hc::EFFECTIVE_ROLES"
    WHERE USER_NAME = :GRANTEE AND ROLE_NAME = :ROLE_NAME;

END;