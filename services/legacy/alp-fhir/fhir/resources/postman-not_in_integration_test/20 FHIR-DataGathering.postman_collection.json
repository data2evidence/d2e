{
	"info": {
		"_postman_id": "c637ff81-cd17-47f3-9a79-b76076500e1c",
		"name": "20 FHIR-DataGathering - Remote Server & SMART",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Load A complete patient from public HAPI server",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "f407dc42-dcef-4e1a-80ef-9db11ad4152d",
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Status code is 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"    pm.response.to.have.status(\"OK\");",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"endpoint\":\"http://fhirtest.uhn.ca/baseDstu3\",\n\t\"query\":\"Patient/271048/$everything\"\n}"
				},
				"url": {
					"raw": "{{protocol}}://{{host}}:{{port}}/fhir/{{endpoint}}/_load?mode=restimport",
					"protocol": "{{protocol}}",
					"host": [
						"{{host}}"
					],
					"port": "{{port}}",
					"path": [
						"fhir",
						"{{endpoint}}",
						"_load"
					],
					"query": [
						{
							"key": "mode",
							"value": "restimport"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Upload SMART Dataset as Zip-File from FileSystem",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "ba03986b-35c1-45ab-993f-199523620bf6",
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Status code is 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"    pm.response.to.have.status(\"OK\");",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": "../../../testdata/SMART.zip"
						}
					]
				},
				"url": {
					"raw": "{{protocol}}://{{host}}:{{port}}/fhir/{{endpoint}}/upload",
					"protocol": "{{protocol}}",
					"host": [
						"{{host}}"
					],
					"port": "{{port}}",
					"path": [
						"fhir",
						"{{endpoint}}",
						"upload"
					]
				}
			},
			"response": []
		}
	]
}