		encode zstd gzip
		file_server {
			precompressed zstd br gzip
		}
	}

	## call gateway if there are no matched files
	handle {
		reverse_proxy https://alp-minerva-gateway-1:41100 {
			transport http {
				tls
				tls_insecure_skip_verify
				read_buffer 8192
			}
